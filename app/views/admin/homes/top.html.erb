<div class="row">
  <div class="offset-2">
    <h4>注文履歴一覧</h4>
  </div>
</div>

<div class="row">
  <div class="col-lg-8 offset-2 mt-3">
    <table class="table">
      <thead class="table-secondary">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>


      <tbody>

         <% @orders.each do |order| %>
        <tr>
          <td><%= link_to admin_order_path(order) do %><%= order.created_at.strftime('%Y/%m/%d %H:%M') %><% end %></td>
          <td><%= order.customer.familly_name %> <%= order.customer.first_name %></td>
          <% order_details = order.order_details %>
          <% amount = 0 %>
          <% order_details.each do |order_detail| %>
          <% amount += order_detail.amount %>
          <% end %>
          <td><%= amount %></td>
          <td><%= order.order_status_i18n %></td>
        </tr>
        <%end%>
      </tbody>

    </table>
  </div>
</div>




