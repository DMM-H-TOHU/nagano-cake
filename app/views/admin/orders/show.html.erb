<div class="row">
<div class="offset-2">
<div class="col-12 mx-1">
<h4>注文履歴詳細</h4>
</div>
</div>
</div>




  <div class="row">
  <div class="offset-1">
  <div class="col-12 mx-1">
    <table>

      <thead>
      <tr>
        <td style="font-size : 20px; width="20%""><strong>購入者</strong></td>
        <td><%= @order.customer.familly_name %>　<%= @order.customer.first_name %></td>
      </tr>
      <tr>
        <td style="font-size : 20px; width="20%""><strong>注文日</strong></td>
        <td><%= @order.created_at %></td>
      </tr>

      <tr>
        <td style="font-size : 20px; width="20%""><strong>配送先</strong></td>
        <td><%= @order.zipcpde %><%= @order.address %><%= @order.name %></td>
      </tr>

      <tr>
        <td style="font-size : 20px; width="20%""><strong>支払い方法</strong></td>
        <td><%= @order.payment_method %></td>
      </tr>

　　　　　　<%= form_with(model: @order local: true) do |f| %>
      <tr>
        <td style="font-size : 20px; width="20%""><strong><%= f.label :order_status, "注文ステータス" %></strong></td>
        <td><%= f.select :order_status, {'入金待ち': waiting, '入金確認': confirm, '制作中': making, '発送準備中': preparing, '発送済み': sent} %>
            <%= f.submit "更新", class: "btn btn-success" %></td>
      </tr>
            <% end %>

      </thead>

      <tbody>
        <div class="row">
      <tr>
        <th style=width="20%">商品名</th>
        <th style=width="20%">単価(税込)</th>
        <th style=width="20%">数量</th>
        <th style=width="20%">小計</th>
        <th style=width="20%">製作ステータス</th>
        <th></th>
      </tr>
      <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.item_name %></td>
        <td><%= order_detail.price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.price*order_detail.amount %></td>
        <td><%= form_with(model: order_detail, local: true) do |f| %>
            <%= f.select :making_status, {'着手不可': 1, '製作待ち': 2, '製作中':3, '製作完了':4} %></td>
            <%end%>
        <td><%= f.submit "更新", class: "btn btn-success" %></td>
      </tr>
       <%end%>
      <tr>
        <td>商品合計</td>
        <td><%= @order.total_price - @order.postage %></td>
      </tr>
      <tr>
        <td>送料</td>
        <td><%= @order.postage %></td>
      </tr>
      <tr>
        <td>請求金額合計</td>
        <td><%= @order.total_price %></td>
      </tr>

        </div>
      </tbody>
    </table>
  </div>
  </div>
  </div>
