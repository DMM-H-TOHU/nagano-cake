<div class="row">
<div class="offset-2">
<div class="col-12 mx-1">
<h4>注文履歴詳細</h4>
</div>
</div>
</div>




  <div class="row">
  <div class="offset-1">
  <div class="col-12 mx-1">
    <table>

      <thead>
      <tr>
        <td style="font-size : 20px; width="20%""><strong>購入者</strong></td>
        <td><%= @order.customer.familly_name %>　<%= @order.customer.first_name %></td>
      </tr>
      <tr>
        <td style="font-size : 20px; width="20%""><strong>注文日</strong></td>
        <td><%= @order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
      </tr>

      <tr>
        <td style="font-size : 20px; width="20%""><strong>配送先</strong></td>
        <td><%= @order.zipcode %><%= @order.address %><%= @order.name %></td>
      </tr>

      <tr>
        <td style="font-size : 20px; width="20%""><strong>支払い方法</strong></td>
        <td><%= @order.payment_method_i18n %></td>
      </tr>


      <tr>
        <td style="font-size : 20px; width="20%""><strong>注文ステータス</strong></td>
        <td><%= form_with model: @order, url: admin_order_path, method: :patch , local: true do |f| %>
          <%= f.select :order_status, {'入金待ち': "waiting", '入金確認': "confirm", '製作中': "making", '発送準備中': "preparing", '発送済み': "sent"} %>
            <%= f.submit "更新", class: "btn btn-success" %><% end %></td>
      </tr>

      </thead>

      <tbody>
        <div class="row">
      <tr>
        <th style=width="20%">商品名</th>
        <th style=width="20%">単価(税込)</th>
        <th style=width="20%">数量</th>
        <th style=width="20%">小計</th>
        <th style=width="20%">製作ステータス</th>
      </tr>
      <% @order_details = @order.order_details %>
      <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.price*order_detail.amount %></td>
        <td><%= form_with model: order_detail,url:  admin_order_details_path, method: :patch, local: true do |f| %>
            <%= f.hidden_field :id, :value => order_detail.id %>
            <%= f.select :making_status, {'着手不可': "unavailable", '製作待ち': "waiting", '製作中': "making", '製作完了': "complete" } %>
            <%= f.submit "更新", class: "btn btn-success" %></td>
      </tr>
      <%end%>
       <%end%>
      <tr>
        <td>商品合計</td>
        <td><%= @order.total_price - @order.postage %></td>
      </tr>
      <tr>
        <td>送料</td>
        <td><%= @order.postage %></td>
      </tr>
      <tr>
        <td>請求金額合計</td>
        <td><%= @order.total_price %></td>
      </tr>

        </div>
      </tbody>
    </table>
  </div>
  </div>
  </div>
