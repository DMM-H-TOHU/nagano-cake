<h2>　商品編集　</h2>

<%= form_with model: @item, url:'/admin/items', method: :post do |f| %>
  <h4>商品画像</h4>
    <%= f.file_field :image, accept:"image/*" %>
  <h4>商品名</h4>
    <%= f.text_field :name %>
  <h4>商品説明</h4>
    <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
    <%= f.collection_select(:genre_id, @genres,  :id, :name) %>
  <h4>税抜価格</h4>
    <%= f.text_field :price %>
  <h4>販売ステータス</h4>
  　　<%= f.radio_button :is_status, :true %>
  　　<%= f.label :is_status, "販売中" %>
  　　<%= f.radio_button :is_status, :false %>
  　　<%= f.label :is_status, "販売停止中" %>
  <h4>
    <%= f.submit '新規登録' %>
  </h4>
  <% end %>

