<h2>商品一覧</h2>
<li>
  <%= link_to "new", new_admin_item_path %>
</li>

<thead>
  <tr>
    <th>
      商品ID
    </th>
    <th>
      商品名
    </th>
    <th>
      税抜価格
    </th>
    <th>
      ジャンル
    </th>
    <th>
      ステータス
    </th>
  </tr>
</thead>

<% @items.each do |item| %>
  <div>
    <tr>
      <td>
        <%= item.id %>
      </td>
      <td>
        <%= link_to admin_item_path do %>
          <%= item.name %>
        <% end %>
      </td>
      <td>
        <%= item.price %>
      </td>
      <td>
        <%= item.genre.name %>
      </td>
      <td>
        <%= item.is_status %>
      </td>
    </tr>
  </div>
<% end %>