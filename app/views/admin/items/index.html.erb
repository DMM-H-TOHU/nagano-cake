<div class="container">
  <div class="row">
      <div class="col">
        <h2 class="col-3 head-line title_h2 bg-secondary text-white text-center">商品一覧</h2>
      </div>
       <%= link_to "new", new_admin_item_path %>
  </div>
</div>

<div class="d-flex justify-content-center">
  <div class="mx-auto">
    <table class="table">
      <thead class="table-secondary">
        <tr>
          <th>
            商品ID
          </th>
          <th>
            商品名
          </th>
          <th>
            税抜価格
          </th>
          <th>
            ジャンル
          </th>
          <th>
            ステータス
          </th>
        </tr>
      </thead>
      <% @items.each do |item| %>
      <div>
        <tr>
          <td>
            <%= item.id %>
          </td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
            <% end %>
          </td>
          <td>
            <%= item.price %>円
          </td>
          <td>
            <%= item.genre.name %>
          </td>
          <td>
            <% if item.is_status == true %>
              <p class="text-success">販売中</p>
            <% elsif item.is_status == false %>
              <p class="text-secondary">販売停止中</p>
            <% end %>
          </td>
        </tr>
      </div>
      <% end %>
    </table>
    <div class="text text-senter">
      <%= paginate @items %>
    </div>
  </div>
</div>
