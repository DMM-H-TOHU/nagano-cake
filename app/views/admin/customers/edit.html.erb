<div class="row">
  <div class="offset-1">
    <h4><%= @customer.familly_name %><%= @customer.first_name %>さんの会員情報編集</h4>
  </div>
</div>



<div class='container px-10'>
  <div class="row">
    <div class="col">

<%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>

      <table>

        <div class="row">
          <div class="col-2 mt-5">会員ID</div>
          <div class="mx-3 mt-5"><%= @customer.id %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-4">氏名</div>
          <div class="col-3 mx-1 mt-4"><%= f.text_field :familly_name, autofocus: true, id:"familly_name", placeholder:"氏名", class: "form-control" %></div>
          <div class="col-3 mx-1 mt-4"><%= f.text_field :first_name, autofocus: true, id:"first_name", placeholder:"氏名", class: "form-control" %></div>
        </div>

        <div class="row">
          <div class="col-2 mt-4">フリガナ</div>
          <div class="col-3 mx-1 mt-4"><%= f.text_field :familly_name_kana, autofocus: true, id:"familly_name_kana", placeholder:"フリガナ", class: "form-control" %></div>
          <div class="col-3 mx-1 mt-4"><%= f.text_field :first_name_kana, autofocus: true, id:"first_name_kana", placeholder:"フリガナ", class: "form-control" %></div>
        </div>

        <div class="row">
          <div class="col-2 mt-4">郵便番号</div>
          <div class="col-3 mx-1 mt-4"><%= f.text_field :zipcode, autofocus: true, id:"zipcode", placeholder:"郵便番号", class: "form-control" %></div>
        </div>

        <div class="row">
          <div class="col-2 mt-4">住所</div>
          <div class="col-8 mx-1 mt-4"><%= f.text_field :address, autofocus: true, id:"address", placeholder:"住所", class: "form-control" %></div>
        </div>

        <div class="row">
          <div class="col-2 mt-4">電話番号</div>
          <div class="col-3 mx-1 mt-4"><%= f.text_field :telephone_number, autofocus: true, id:"telephon_number", placeholder:"電話番号", class: "form-control" %></div>
        </div>

        <div class="row">
          <div class="col-2 mt-4">メールアドレス</div>
          <div class="col-3 mx-1 mt-4"><%= f.text_field :email, autofocus: true, id:"email", placeholder:"メールアドレス", class: "form-control" %></div>
        </div>

        <div class="row">
          <div class="col-2 mt-4">退会ステータス</div>
          <div class="col-3 mx-1 mt-4">
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会　　" %>
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効" %>
          </div>
        </div>

    <div class="row">
      <div class="col-2 mt-4"></div>
        <div class="col-3 mt-4 btn-lg">
          <strong><%= f.submit "変更を保存", class: 'btn btn-success btn-lg '%></strong>
      </div>
    </div>

    <%end%>
      </table>
      </div>
    </div>
  </div>




