<%= form_with model: @order, url: public_orders_confirm_path, method: :post, class: "form-horizontal", local: true do |f| %>
  <p class="h4 text-black"><strong>販売中</strong></p>
  <!-- enum -->
  <div>
    <%= f.radio_button :payment_method, 0 , checked: true %>
    <%= f.label :payment_method, "クレジットカード" %><br>
    <%= f.radio_button :payment_method, 1 , checked: false %>
    <%= f.label :payment_method, "銀行振込" %>
  </div>

  <div>
    <%= f.radio_button :address_number, 1 %>
    <%= f.label :address_number_1, "ご自身の住所" %>
    <%= current_customer.address %><br>

    <%= f.radio_button :address_number, 2 %>
    <%= f.label :address_number_2, "登録済の住所から選択" %>
    <%= f.collection_select(:registered, @send_addresses, :id, :address) %><br>

    <%= f.radio_button :address_number, 3 %>
    <%= f.label :address_number_3, "新しいお届け先" %>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %><br>
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name %>
    <%= f.submit "確認画面へ進む" %><br>
  </div>
<% end %>
