<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="col-3">注文確認画面</h2>
        </div>
    </div>


    <div class="row">
        <div class="col-8">

            <table class="table table-bordered">

                <thead>
                    <tr>
                        <th>商品名</th>
                        <th>単価(税込)</th>
                        <th>数量</th>
                        <th>小計</th>
                    </tr>
                </thead>
                <tbody>
                    <% total = 0 %>
                    <% @cart_items.each do |cart| %>
                        <tr>
                            <td>
                                <%= image_tag cart.item.get_image, size: "60x50" %>
                                <%= cart.item.name %>
                            </td>
                            <td><%= cart.item.add_tax_price.to_s(:delimited) %></td>
                            <td><%= cart.amount %></td>
                            <td>
                                <% subtotal = cart.amount.to_i * cart.item.add_tax_price.to_i %>
                                <%= subtotal.to_s(:delimited) %>
                            </td>
                        </tr>
                    <% total += subtotal.to_i %>
                    <% end %>
                </tbody>

            </table>

        </div>

        <div class="col-4">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <td>送料</td>
                        <td><%= @order.postage %></td>
                    </tr>
                    <tr>
                        <td>商品合計</td>
                        <td><%= total %></td>
                    </tr>
                    <tr>
                        <td>請求金額</td>
                        <td><%= total + @order.postage %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-8">
            <table>
                <tbody>
                    <tr>
                        <td>支払方法</td>
                        <td><%= @order.payment_method %></td>
                    </tr>
                    <tr>
                        <td>お届け先</td>
                        <td>
                            〒<%= @order.zipcode %>　<%= @order.address %><br>
                            <%= @order.name %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%= form_with model: @order, url: public_orders_path, method: :post, local: true do |f| %>
    <% f.hidden_field :name %>
    <% f.hidden_field :address %>
    <% f.hidden_field :total_price %>
    <center><%= f.submit "注文を確定する", class: "btn btn-success" %></center>
<% end %>