<div class="container">
  <div class="row">

    <div class="col-4">
      <table class="table text-center">
        <thead class="table-light"><th>ジャンル検索</th></thead>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="col-8">
      <%= image_tag 'about.jpg', class: 'rounded mx-auto' %>
      <div class="mt-3 mb-3"><h2>新着商品</h2></div>

      <div class="card-group" style="width:20rem">
      <% @items.each do |item| %>
      <div class="card">
        <%= image_tag item.get_image, class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-title"><%= item.name %></h5>
          <p class="card-text">税抜価格：<%= item.price %>円</p>
          <%= link_to public_item_path(item) do %>
              <button type="button" class="btn btn-primary">詳細ページへ</button>
            <% end %>
      </div>
      <% end %>
      </div>

    </div>

  </div>
</div>