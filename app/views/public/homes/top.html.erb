<div class="container">
  <div class="row">

    <div class="col-2">
      <table class="table text-center">
        <thead class="table-light"><th>ジャンル検索</th></thead>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= link_to public_item_path(genre) do %><%= genre.name %><% end %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="col-10">
      <%= image_tag 'about.jpg', class: 'rounded' %>
    </div>

  </div>

  <div class="row">
    <div class="col-2"></div>
    <div class="col-10"><div class="mt-3 mb-3"><h2>新着商品</h2></div></div>
  </div>

  <div class="row row-cols-1 row-cols-md-4 g-4 offset-2">

    <% @items.each do |item| %>
      <div class="col">
        <div class ="card h-100">
          <%= image_tag item.get_image, class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <p class="card-text">税抜価格： <%= item.price %>円</p>
            <%= link_to public_item_path(item) do %> <button type="button" class="btn btn-primary">詳細ページへ</button><% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
