<div class='container px-5'>

  <div class="row">
    <div class='col'>
      <h2 class="border-bottom border-secondary mt-3 mb-3 pb-1">新規会員登録</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


      <table width="100%" cellpadding="5">
        <tr>
          <td>名前</td>
          <td><div class="field text-center"><%= f.label :familly_name, "(姓)" %></td><td><%= f.text_field :familly_name, :placeholder => "山田", class: "form-control" %></div></td>
          <td><div class="field text-center"><%= f.label :first_name, "（名）" %></td><td><%= f.text_field :first_name, :placeholder => "太郎", class: "form-control"  %></div></td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td><div class="field text-center"><%= f.label :familly_name_kana, "（セイ）" %></td><td><%= f.text_field :familly_name_kana, :placeholder => "ヤマダ", class: "form-control"  %></div></td>
          <td><div class="field text-center"><%= f.label :first_name_kana, "（メイ）" %></td><td><%= f.text_field :first_name_kana, :placeholder => "タロウ", class: "form-control"  %></div></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td></td>
          <td><div class="field"><% f.label :email %><%= f.email_field :email, autocomplete: "email", :placeholder => "sample@example.com", class: "form-control"  %></div></td>
          <td></td>
          <td></td>
        </tr>

        <tr>
          <td>郵便番号（ハイフンなし）</td>
          <td></td>
          <td><div class="field"><% f.label :zipcode %><%= f.text_field :zipcode, :placeholder => "0000000", class: "form-control"  %></div></td>
          <td></td>
          <td></td>
        </tr>

        <tr>
          <td>住所</td>
          <td></td>
          <td colspan="3"><div class="field"><% f.label :address %><%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0", class: "form-control"  %></div></td>
        </tr>

        <tr>
          <td>電話番号（ハイフンなし）</td>
          <td></td>
          <td><div class="field"><% f.label :telephone_number %><%= f.text_field :telephone_number, :placeholder => "00012345678", class: "form-control"  %></div></td>
          <td></td>
          <td></td>
        </tr>

        <tr>
          <td>パスワード<% if @minimum_password_length %><em>（<%= @minimum_password_length %>文字以上）</em><% end %></td>
          <td></td>
          <td><div class="field"><% f.label :password %><%= f.password_field :password, autocomplete: "new-password", class: "form-control"  %></div></td>
          <td></td>
          <td></td>
        </tr>

        <tr>
          <td>パスワード（確認用）</td>
          <td></td>
          <td><div class="field"><% f.label :password_confirmation %><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"  %></div></td>
          <td></td>
          <td></td>
        </tr>

        <tr>
          <td></td>
          <td></td>
          <td><div class="actions"><%= f.submit "新規会員登録", class: 'btn btn-success btn-lg' %></div></td>
          <td></td>
        </tr>

      </table>

<% end %>

<h2 class="border-bottom border-secondary mt-3 pb-1">既に登録済みの方</h2>
<%= render "public/shared/links" %>

    </div>
  </div>
</div>