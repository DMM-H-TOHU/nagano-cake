<div class="container">
  <div class="row">

    <div class="col-2">
      <table class="table text-center">
        <thead class="table-light"><th>ジャンル検索</th></thead>
        <tr>
            <td><%= link_to public_items_path do %>すべての商品<% end %></td>
          </tr>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= link_to "/items?genre_id=#{genre.id}" do %><%= genre.name %><% end %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="col-10">
      <table>
        <td><h2><% if @genre.presence %><%= @genre.name %><% else %>商品一覧<% end %></h2></td><td><p>(全<%= @count %>件)</p></td>
      </table>
      <div class="row row-cols-1 row-cols-md-4 g-4">
        <% @items.each do |item| %>
        <div class="col mb-2">
          <div class="card h-100">
            <%= link_to public_item_path(item.id) do %>
              <%= image_tag item.get_image, class: "card-img-top", size: "150x150" %>
            <% end %>

            <div class="card-body">
              <h6 class="card-title"><%= item.name %></h6>
              <p class="card-text"><%= item.add_tax_price.to_s(:delimited) %>円</p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="offset-5">
      <div class="text-center pt-5"> <%= paginate @items %></div>
    </div>
  </div>



</div>





