<h1>会員情報編集</h1>
<%= form_with model:@customer do |f| %>

  <table>
    <tr>
      <td>氏名</td>
      <td><div class="field"><%= f.label :family_name %></div></td>
      <td><div class="field"><%= f.label :first_name %></div></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><div class="field"><%= f.label :family_name_kana %></div></td>
      <td><div class="field"><%= f.label :first_name_kana %></div></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><div class="field"><%= f.label :zipcode %></div></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><div class="field"><%= f.label :address %></div></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><div class="field"><%= f.label :telephone_number %></div></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><div class="field"><%= f.label :email %></div></td>
    </tr>
  </table>


  <%= f.submit "編集内容を保存" %><%#退会するボタンここに%>