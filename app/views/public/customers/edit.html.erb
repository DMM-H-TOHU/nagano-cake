<div class='container px-5'>
  <div class="row">
    <div class='col'>
      <h2>会員情報編集</h2>
      <%= form_with model: @customer, url: public_customer_path(@customer), method: :patch do |f| %>
      <table>
        <tr>
          <td>氏名</td>
          <td><div class="field"><%= f.text_field :familly_name, autofocus: true, id:"familly_name", placeholder:"氏名" %></div></td>
          <td><div class="field"><%= f.text_field :first_name, autofocus: true, id:"first_name", placeholder:"氏名" %></div></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><div class="field"><%= f.text_field :familly_name_kana, autofocus: true, id:"familly_name_kana", placeholder:"フリガナ" %></div></td>
          <td><div class="field"><%= f.text_field :first_name_kana, autofocus: true, id:"first_name_kana", placeholder:"フリガナ" %></div></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><div class="field"><%= f.text_field :zipcode, autofocus: true, id:"zipcode", placeholder:"郵便番号" %></div></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><div class="field"><%= f.text_field :address, autofocus: true, id:"address", placeholder:"住所" %></div></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><div class="field"><%= f.text_field :telephone_number, autofocus: true, id:"telephon_number", placeholder:"電話番号" %></div></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><div class="field"><%= f.text_field :email, autofocus: true, id:"email", placeholder:"メールアドレス" %></div></td>
        </tr>
      </table>
      <%= f.submit "編集内容を保存", class: "btn btn-success btn-sm" %>
      <%= link_to '退会する', public_customers_is_deleted_path, class: "btn btn-danger btn-sm ml-5" %>

<% end %>


    </div>
  </div>



</div>







