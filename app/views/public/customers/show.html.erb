<h1>マイページ</h1>
<h4>登録情報</h4>
<%= link_to '編集する', edit_public_customer_path(current_customer) %>

  <table>
    <tbody>
      <tr>
        <td>氏名</td>
        <td><%= @customer.familly_name %><%= @customer.first_name %></td>
      </tr>

      <tr>
        <td>カナ</td>
        <td><%= @customer.familly_name_kana %><%= @customer.first_name_kana %></td>
      </tr>

      <tr>
        <td>郵便番号</td><td><%= @customer.zipcode %></td>
      </tr>

      <tr>
        <td>住所</td><td><%= @customer.address %></td>
      </tr>

      <tr>
        <td>電話番号</td><td><%= @customer.telephone_number %></td>
      </tr>

      <tr>
        <td>メールアドレス</td><td><%= @customer.email %></td>
      </tr>

    </tbody>
  </table>
<%= link_to public_customers_is_deleted_path do %>退会する <% end %>


