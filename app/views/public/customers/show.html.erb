<div class='container px-5'>
  <div class="row">
    <div class='col'>
      <h2>マイページ</h2>
    </div>
  </div>
</div>

<div class='container px-1'>
  <table>
    <td><h5>登録情報</h5></td>
    <td><%= link_to '編集する', edit_public_customer_path(current_customer), class: 'btn btn-success btn-sm' %></td>
  </table>
  <table class="table table-bordered, border border-dark border-2">
    <tbody>
      <tr>
        <td width="240", class= "table-secondary">氏名</td>
        <td width="480"><%= @customer.familly_name %><%= @customer.first_name %></td>
      </tr>

      <tr>
        <td class= "table-secondary">カナ</td>
        <td><%= @customer.familly_name_kana %><%= @customer.first_name_kana %></td>
      </tr>

      <tr>
        <td class= "table-secondary">郵便番号</td><td><%= @customer.zipcode %></td>
      </tr>

      <tr>
        <td class= "table-secondary">住所</td><td><%= @customer.address %></td>
      </tr>

      <tr>
        <td class= "table-secondary">電話番号</td><td><%= @customer.telephone_number %></td>
      </tr>

      <tr>
        <td class= "table-secondary">メールアドレス</td><td><%= @customer.email %></td>
      </tr>

    </tbody>
  </table>
  <table>
    <tr>
      <td>配送先</td>
      <td>
        <%= link_to '一覧を見る', public_send_addresses_path, class: "btn btn-primary btn-sm" %>
    </tr>
    <tr>
      <td>注文履歴</td>
      <td><button type="button" class="btn btn-primary btn-sm">一覧を見る</button></td>
    </tr>
  </table>

</div>


