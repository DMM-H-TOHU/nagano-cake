<div class='container px-5'>
  <div class="row">
    <div class='col'>
      <h2>マイページ</h2>
    </div>
  </div>
</div>

<div class='container px-1'>
  <table>
    <td><h5>登録情報</h5></td>
    <td><%= link_to '編集する', edit_public_customer_path(current_customer), class: 'btn btn-success btn-sm' %></td>
  </table>
  <table border="1">
    <tbody>
      <tr>
        <td>氏名</td>
        <td><%= @customer.familly_name %><%= @customer.first_name %></td>
      </tr>

      <tr>
        <td>カナ</td>
        <td><%= @customer.familly_name_kana %><%= @customer.first_name_kana %></td>
      </tr>

      <tr>
        <td>郵便番号</td><td><%= @customer.zipcode %></td>
      </tr>

      <tr>
        <td>住所</td><td><%= @customer.address %></td>
      </tr>

      <tr>
        <td>電話番号</td><td><%= @customer.telephone_number %></td>
      </tr>

      <tr>
        <td>メールアドレス</td><td><%= @customer.email %></td>
      </tr>

    </tbody>
  </table>
  <table>
    <tr>
      <td>配送先</td>
      <td><button type="button" class="btn btn-primary btn-sm">一覧を見る</button></td>
    </tr>
    <tr>
      <td>注文履歴</td>
      <td><button type="button" class="btn btn-primary btn-sm">一覧を見る</button></td>
    </tr>
  </table>

</div>


